# ====================================================
# ========== Backend environment variables ==========

# Database
DB_HOST=CHANGE_ME_DB_HOST
DB_USER=CHANGE_ME_DB_USER
DB_PASSWORD=CHANGE_ME_DB_PASSWORD
DB_NAME=CHANGE_ME_DB_NAME
DB_PORT=5432
DB_SSLMODE=disable

# Logging & defaults
LOG_LEVEL=info
SEED_DEFAULT_DATA=true

# Internal API
INTERNAL_API_KEY=CHANGE_ME_INTERNAL_API_KEY

# Encryption & JWT
ENCRYPTION_KEY=CHANGE_ME_ENCRYPTION_KEY
JWT_SECRET=CHANGE_ME_JWT_SECRET
JWT_REFRESH_SECRET=CHANGE_ME_JWT_REFRESH_SECRET

# Redis
REDIS_HOST=CHANGE_ME_REDIS_HOST
REDIS_PORT=6379
REDIS_USERNAME=CHANGE_ME_REDIS_USERNAME
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD

# Mailgun
MAILGUN_API_KEY=CHANGE_ME_MAILGUN_API_KEY
MAILGUN_DOMAIN=bluemagma.net

# GitHub integration
GITHUB_INTEGRATION_URL=http://github-integration:8000
GITHUB_APP_ID=CHANGE_ME_GITHUB_APP_ID
GITHUB_APP_PRIVATE_KEY=CHANGE_ME_GITHUB_APP_PRIVATE_KEY
GITHUB_WEBHOOK_SECRET=CHANGE_ME_GITHUB_WEBHOOK_SECRET
GITHUB_CLIENT_ID=CHANGE_ME_GITHUB_CLIENT_ID
GITHUB_CLIENT_SECRET=CHANGE_ME_GITHUB_CLIENT_SECRET
GITHUB_APP_SLUG=CHANGE_ME_GITHUB_APP_SLUG

# Google OAuth
GOOGLE_CLIENT_ID=CHANGE_ME_GOOGLE_CLIENT_ID
GOOGLE_CLIENT_SECRET=CHANGE_ME_GOOGLE_CLIENT_SECRET

# Frontend URL
FRONTEND_URL=https://app.trybluemagma.com


# ====================================================
# ========== Frontend environment variables ==========

# Backend API base URL (inside Docker network)
BLUE_MAGMA_API=http://app:8080

NEXTAUTH_URL=https://app.trybluemagma.com

# GraphLang / LangChain agent
LANGCHAIN_API_URL=http://graphlang-agent:8001
LANGCHAIN_WS_URL=ws://graphlang-agent:8001

# Stripe configuration, not super relevant
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=CHANGE_ME_STRIPE_PUBLISHABLE_KEY
STRIPE_SECRET_KEY=CHANGE_ME_STRIPE_SECRET_KEY
STRIPE_WEBHOOK_SECRET=CHANGE_ME_STRIPE_WEBHOOK_SECRET


# ===========================================================
# ========== GraphLang agent environment variables ==========

# Backend API configuration
BACKEND_API_URL=http://app:8080
BACKEND_REQUEST_TIMEOUT=10.0

# LLM configuration
DEFAULT_LLM_MODEL=gpt-5.1
MEMORY_WINDOW_SIZE=15

# Redis (optional, for session persistence)
REDIS_URL=CHANGE_ME_REDIS_HOST
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD


# ===========================================================
# =============== Shared environment variables ==============

# used by services to communicate with each other internally, should not be used for public facing endpoints
OPENAI_KEY=CHANGE_ME_OPENAI_KEY